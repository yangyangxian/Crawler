@page "/"
@using Yang.Entities
@using Yang.SpiderApplication.Seashell

<PageTitle>Home</PageTitle>

Welcome to your new app.

<MudText Typo="Typo.h6">Community Number: @CommunityCount</MudText>
<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="ButtonOnClick">@ButtonText</MudButton>

@code {
    public string Text { get; set; } = "";
    public string ButtonText { get; set; } = "Read Communities";
    public int CommunityCount { get; set; }

    public async Task ButtonOnClick()
    {
        SeashellApplications seashellApp = new SeashellApplications();
        IList<Community> communities = await seashellApp.ReadCommunities();
        CommunityCount = communities.Count;
    }
}
