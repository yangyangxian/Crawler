@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="Increment1">Plus 1</button>
<button class="btn btn-primary" @onclick="Increment10">Plus 10</button>
<button class="btn btn-primary" @onclick="Increment100">Plus 100</button>

@code {
    private int currentCount = 0;

    private void Increment1()
    {
        currentCount += 1;
    }

    private void Increment10()
    {
        currentCount += 10;
    }

    private void Increment100()
    {
        currentCount += 100;
    }
}
